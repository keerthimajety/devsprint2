<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>First_Name_alphabet_Only</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(  First_Name__c ,&quot;^[a-z A-Z]*$&quot;))</errorConditionFormula>
    <errorDisplayField>First_Name__c</errorDisplayField>
    <errorMessage>Name should be only in alphabets</errorMessage>
</ValidationRule>
